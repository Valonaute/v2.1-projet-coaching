
{% extends 'base.html.twig' %}

{% block title %}Blog {% endblock %}

{% block content %}

<section class="menu">
  <a class="on" href="{{ path ('blog')}}"> Tous les articles </a>
  <a class="inactive" href="{{ path ('confidence')}}"> Confiance en soi </a>
  <a class="inactive" href="{{ path ('relations')}}"> Relations </a>
  <a class="inactive" href="{{ path ('communications')}}"> Communications </a>
</section>

<div class="container-fluid">
        <div class="row">

        {% for article in articles %}
        
        <div class="card col-4" style="width: 18rem;">
            <img src="{{ asset('uploads/')}}{{ article.image }}" class="card-img-top" alt="{{ article.title}}">
        <div class="card-body">
            <h5 class="card-title">{{ article.title}}</h5>
            <p class="card-text">{{ article.shortdescription}}</p>
            <a href="{{ path('front_onearticle', {id: article.id})}}" class="btn btn-warning">Lire l'article</a>
        </div>
</div>
    {% endfor %}

</div>
</div>

{% endblock %}
